<!-- 帳號摺疊內容 Modal new admin-->
<div class="modal fade" id="newAdminModal" tabindex="-1" aria-labelledby="exampleModalLabel"
aria-hidden="true">
<div class="modal-dialog modal-dialog-centered">
  <div class="modal-content rounded-1 p-32">
    <button type="button" class="btn-close position-absolute" data-bs-dismiss="modal"
      aria-label="Close"></button>
    <h1 class="fs-4 fw-bold mb-32">New Admin</h2>
    <!-- Account -->
    <div class="border-bottom border-dark mb-4 ">
      <h2 class="fs-5 mb-3 fw-bold">Account</h2>
      <form class="mb-4">
        <div class="mb-3">
          <label for="InputName" class="form-label fs-14 text-body">Name</label>
          <br>
          <input type="text"  id="InputName" class="form-control w-100 rounded-1 border border-dark" style="height: 50px;">
        </div>
        <div class="mb-3">
          <label for="InputEmail" class="form-label fs-14 text-body">Email</label>
          <br>
          <input type="email" class="form-control w-100 rounded-1 border border-dark" id="InputEmail1"  aria-describedby="emailHelp" style="height: 50px;">
        </div>        
      </form>
    </div>
    <!-- Verification -->
    <div class="border-bottom border-dark mb-4 ">
      <h2 class="fs-5 mb-3 fw-bold">Verification</h2>
      <div class="d-flex align-items-center mb-3">
        <span class="material-icons text-danger me-2">
        warning
        </span><span class="fw-bold ">Unverified</span></div>
      <button type="button" class="btn btn-outline-success border-dark fs-6 fw-bold py-3 w-100 mb-4"  style="height: 50px;">Send Verification Mail</button>
    </div>
    <!-- Access Level -->
    <div class="border-bottom border-dark mb-4 ">
      <h2 class="fs-5 mb-3 fw-bold">Access Level</h2>
      <div class="dropdown">
        <button class="btn btn-outline-secondary dropdown-toggle w-100 d-flex justify-content-between align-items-center mb-4" type="button"  style="height: 50px;" id="dropdownMenuButton1" data-bs-toggle="dropdown" aria-expanded="false">
          <span>-Choose access level-</span><span class="material-icons">
            expand_more
            </span>
        </button>
        <ul class="dropdown-menu w-100" aria-labelledby="dropdownMenuButton1">
          <li><a class="dropdown-item" href="#">Admin</a></li>
          <li><a class="dropdown-item" href="#">User</a></li>
        </ul>
      </div>
    </div>
    <!-- Custom Access -->
    <div class="mb-5">
      <h2 class="fs-5 mb-3 fw-bold">Custom Access</h2>
      <div class="form-check">
        <input class="form-check-input" type="checkbox" value="" id="flexCheckLecture">
        <label class="form-check-label" for="flexCheckLecture">
          Lecture
        </label>
      </div>
      <div class="form-check">
        <input class="form-check-input" type="checkbox" value="" id="flexCheckCoupon">
        <label class="form-check-label" for="flexCheckCoupon">
          Coupon
        </label>
      </div>
      <div class="form-check">
        <input class="form-check-input" type="checkbox" value="" id="flexCheckMessage">
        <label class="form-check-label" for="flexCheckMessage">
          Message
        </label>
      </div>
      <div class="form-check">
        <input class="form-check-input" type="checkbox" value="" id="flexCheckSetting">
        <label class="form-check-label" for="flexCheckSetting">
          Setting
        </label>
      </div>
      <div class="form-check">
        <input class="form-check-input" type="checkbox" value="" id="flexCheckTaskMenu">
        <label class="form-check-label" for="flexCheckTaskMenu">
          Task Menu
        </label>
      </div>
    </div>  
    <!-- Button -->
    <div class="d-flex justify-content-end ">
      <button type="button" class="btn btn-outline-success rounded-1 py-2 px-32 me-3">Cancel</button>
    <button type="button" class="btn btn-success py-2 px-32 rounded-1 ">Add</button>
    </div>
  </div>
</div>
</div>